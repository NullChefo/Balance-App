@model Balance_App.ViewModels.Balances.EditVM
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Contact";
}

<div class="status">
    <h1>Edit Balance</h1>


</div>

   
    <form action="/Balance/Edit" method="post">
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.UserId)
        <div class="grid">
            <div class="row">
                <div class="col-1">Name or type of your balance:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.NameOrType, new { @class = "form", placeholder = "Enter your balance type..." })</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.NameOrType)</div>
            </div>
            <div class="row">
                <div class="col-1">Expiration date:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.ExDate, new { @class = "form", placeholder = "Enter your expiration date..." })</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.ExDate)</div>
            </div>
            <div class="row">
                <div class="col-1">Balance Amount:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.BalanceAmount, new { @class = "form", placeholder = "Enter your balance amount..." })</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.BalanceAmount)</div>
            </div>
            <div class="flex-rows">
                
                    <input class="SubmitButton" type="submit" value="Save" />
                    <a class="Buttoncheta" href="/Balance/Index">Back</a>
                
            </div>
        </div>
    </form>
