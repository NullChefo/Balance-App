@model Balance_App.ViewModels.Users.CreateVM
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registration";
}

<div class="status">
    <h1> Create New User </h1>
</div>

    <form action="/Users/Create" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">Username:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.Username, new { @class = "form", placeholder = "Enter your username..." })</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.Username)</div>
            </div>
            <div class="row">
                <div class="col-1">Password:</div>
                <div class="col-2">@Html.PasswordFor(m => m.Password, new { @class = "form", placeholder = "Enter your password..." })</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.Password)</div>
            </div>
            <div class="row">
                <div class="col-1">First Name:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.FirstName, new { @class = "form", placeholder = "Enter your first name..." })</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.FirstName)</div>
            </div>
            <div class="row">
                <div class="col-1">Last Name:</div>
                <div class="col-2">@Html.TextBoxFor(m => m.LastName, new { @class = "form", placeholder = "Enter your last name..." })</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.LastName)</div>
            </div>
            <div class="flex-rows">
                
                    <input class="SubmitButton" type="submit" value="Create" />

                    <a  class="Buttoncheta" href="/Home/Login">Back</a>

            
            </div>
        </div>
    </form>
